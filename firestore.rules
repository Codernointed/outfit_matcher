rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      
      // Subcollections - favorite items
      match /favorite_items/{itemId} {
        allow read, write: if isOwner(userId);
      }
      
      // Subcollections - favorite outfits
      match /favorite_outfits/{outfitId} {
        allow read, write: if isOwner(userId);
      }
      
      // Subcollections - wardrobe items (if stored in Firestore)
      match /wardrobe/{itemId} {
        allow read, write: if isOwner(userId);
      }
      
      // Subcollections - saved outfits
      match /outfits/{outfitId} {
        allow read, write: if isOwner(userId);
      }
      
      // Subcollections - wardrobe looks
      match /looks/{lookId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Public profiles - read-only for public profiles
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                     get(/databases/$(database)/documents/users/$(userId)).data.isPublicProfile == true;
    }
  }
}
