rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Wardrobe items - users can only access their own wardrobe
    match /users/{userId}/wardrobe/{itemId} {
      allow read, write: if isOwner(userId);
    }
    
    // Saved outfits - users can only access their own outfits
    match /users/{userId}/outfits/{outfitId} {
      allow read, write: if isOwner(userId);
    }
    
    // Wardrobe looks - users can only access their own looks
    match /users/{userId}/looks/{lookId} {
      allow read, write: if isOwner(userId);
    }
    
    // Favorites - users can only access their own favorites
    match /users/{userId}/favorites/{favoriteId} {
      allow read, write: if isOwner(userId);
    }
    
    // Public profiles - read-only for public profiles
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                     resource.data.isPublicProfile == true;
    }
  }
}
