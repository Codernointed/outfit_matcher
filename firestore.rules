rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Allow read if owner OR if it's a public profile
      allow read: if isOwner(userId) || 
                   (isAuthenticated() && resource.data.isPublicProfile == true);
                   
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
      
      // Subcollections - Private by default to the owner
      match /favorite_items/{itemId} { allow read, write: if isOwner(userId); }
      match /favorite_outfits/{outfitId} { allow read, write: if isOwner(userId); }
      match /wardrobeItems/{itemId} { allow read, write: if isOwner(userId); }
      match /wardrobe/{itemId} { allow read, write: if isOwner(userId); }
      match /outfits/{outfitId} { allow read, write: if isOwner(userId); }
      match /savedOutfits/{outfitId} { allow read, write: if isOwner(userId); }
      match /looks/{lookId} { allow read, write: if isOwner(userId); }
      match /wardrobeLooks/{lookId} { allow read, write: if isOwner(userId); }
      
      // Wear History variant subcollection
      match /wearHistory/{eventId} { allow read, write: if isOwner(userId); }
      
      // Generation History subcollection
      match /generation_history/{historyId} { allow read, write: if isOwner(userId); }
      
      // User Preferences subcollection
      match /preferences/{prefsId} { allow read, write: if isOwner(userId); }
    }
    
    // Global Wear History (Top-level collection approach)
    match /wear_history/{eventId} {
      allow read, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
    }
  }
}
